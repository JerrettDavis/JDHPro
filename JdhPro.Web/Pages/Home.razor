<!-- Contact CTA - Final Call to Action -->
<div id="contact">
    <section class="relative py-32 bg-gradient-to-br from-[#00F0FF] via-[#BFFF00] to-[#FF6B35] overflow-hidden">
        <!-- Animated patterns -->
        <div class="absolute inset-0 opacity-10">
            <div class="absolute inset-0 tech-grid"></div>
        </div>
        
        <div class="container relative z-10 mx-auto px-6 lg:px-8 text-center">
            <div class="max-w-4xl mx-auto">
                <span class="inline-block px-6 py-2 bg-gray-950 text-white font-mono text-sm font-bold uppercase tracking-widest mb-8 clip-corner-sm">
                    Ready.To.Initialize
                </span>
                
                <h2 class="text-5xl md:text-7xl font-bold text-gray-950 mb-8">
                    Let's Build<br/>Something Exceptional
                </h2>
                
                <p class="text-xl md:text-2xl text-gray-900 mb-12 max-w-2xl mx-auto font-light">
                    Ready to improve your business with better technical solutions? Let's start your project today.
                </p>
                
                <NavLink href="contact" class="inline-block px-12 py-6 bg-gray-950 text-white font-mono font-bold uppercase text-sm tracking-widest hover:scale-105 hover:shadow-2xl transition-all clip-corner">
                    Contact.Initialize
