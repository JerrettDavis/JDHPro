<div class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-primary dark:text-white mb-4">Why Choose JDH Productions</h2>
            <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
                Partner with a team committed to your success
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-12">
            @foreach (var prop in ValuePropositions)
            {
                <div class="text-center group">
                    <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gradient-to-br from-secondary/20 to-accent/20 mb-6 group-hover:scale-110 transition-transform duration-300">
                        <span class="text-2xl font-bold text-primary dark:text-white">@prop.Icon</span>
                    </div>
                    <h3 class="text-2xl font-bold text-primary dark:text-white mb-4">@prop.Title</h3>
                    <p class="text-gray-600 dark:text-gray-300 leading-relaxed">@prop.Description</p>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private class ValueProp
    {
        public string Icon { get; set; } = "";
        public string Title { get; set; } = "";
        public string Description { get; set; } = "";
    }

    private List<ValueProp> ValuePropositions = new()
    {
        new ValueProp
        {
            Icon = "EX",
            Title = "Cutting-Edge Expertise",
            Description = "Stay ahead of the curve with our mastery of the latest technologies, frameworks, and industry best practices. We continuously evolve to deliver solutions that give you a competitive advantage."
        },
        new ValueProp
        {
            Icon = "TS",
            Title = "Tailored Solutions",
            Description = "No two businesses are alike. We take the time to understand your unique challenges and craft custom solutions that perfectly align with your goals, culture, and vision."
        },
        new ValueProp
        {
            Icon = "PR",
            Title = "Proven Results",
            Description = "Our track record speaks for itself. From startups to enterprises, we've delivered successful implementations that drive measurable business outcomes and exceed expectations."
        }
    };
}
