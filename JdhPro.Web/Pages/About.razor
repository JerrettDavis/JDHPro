<div class="min-h-screen bg-gray-950">
    
    @* Hero Section - Mission Statement *@
    <section class="relative min-h-[80vh] flex items-center overflow-hidden bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950 tech-grid-dark scan-line">
