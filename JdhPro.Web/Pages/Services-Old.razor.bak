@page "/services"
@using JdhPro.Web.Models
@using JdhPro.Web.Services
@inject ContentService ContentService
@inject NavigationManager Navigation

<PageTitle>Our Services - JDH Productions</PageTitle>

<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-950">
    
    @* Hero Section *@
    <section class="relative bg-gradient-to-br from-primary-600 via-primary-700 to-primary-900 dark:from-primary-800 dark:via-primary-900 dark:to-gray-900 text-white py-20 md:py-32 overflow-hidden">
        @* Decorative background elements *@
        <div class="absolute inset-0 bg-grid-white/5 [mask-image:linear-gradient(0deg,white,transparent)]"></div>
        <div class="absolute top-0 right-0 -translate-y-12 translate-x-12 w-96 h-96 bg-secondary-500/20 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 translate-y-12 -translate-x-12 w-96 h-96 bg-accent-500/20 rounded-full blur-3xl"></div>
        
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="max-w-4xl mx-auto text-center">
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 tracking-tight">
                    Our Services
                </h1>
                <p class="text-xl md:text-2xl text-primary-100 leading-relaxed max-w-3xl mx-auto">
                    Comprehensive technical solutions tailored to your business needs
                </p>
            </div>
        </div>
    </section>

    @* Services Loading/Content *@
    <section class="py-16 md:py-24">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            @if (_isLoading)
            {
                <div class="flex justify-center items-center py-20">
                    <div class="animate-spin rounded-full h-16 w-16 border-b-2 border-primary-600"></div>
                </div>
            }
            else if (_services.Any())
            {
                @* Service Cards *@
                <div class="space-y-24 md:space-y-32">
                    @foreach (var (service, index) in _services.Select((s, i) => (s, i)))
                    {
                        var isEven = index % 2 == 0;
                        
                        <article data-testid="service-section" id="@service.Id" class="scroll-mt-24">
                            <div class="@(isEven ? "bg-white dark:bg-gray-800" : "bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900") rounded-2xl shadow-xl overflow-hidden border border-gray-200 dark:border-gray-700">
                                <div class="grid md:grid-cols-2 gap-0">
                                    
                                    @* Icon/Visual Side *@
                                    <div class="@(isEven ? "md:order-1" : "md:order-2") bg-gradient-to-br @GetGradientClasses(index) p-12 md:p-16 flex items-center justify-center">
                                        <div class="text-center space-y-6">
                                            <div class="inline-flex items-center justify-center w-32 h-32 rounded-full bg-white/10 backdrop-blur-sm">
                                                <span class="text-5xl font-bold text-white">@GetServiceInitials(service.Icon)</span>
                                            </div>
                                            <div class="space-y-2">
                                                <h2 class="text-3xl md:text-4xl font-bold text-white">
                                                    @service.Title
                                                </h2>
                                                <p class="text-lg text-white/90 font-medium">
                                                    @service.Summary
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                    @* Content Side *@
                                    <div class="@(isEven ? "md:order-2" : "md:order-1") p-8 md:p-12 lg:p-16">
                                        
                                        @* Benefits Section *@
                                        @if (service.Benefits.Any())
                                        {
                                            <div class="mb-8">
                                                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                                                    <svg class="w-5 h-5 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                    </svg>
                                                    Key Benefits
                                                </h3>
                                                <ul class="space-y-3">
                                                    @foreach (var benefit in service.Benefits.Take(4))
                                                    {
                                                        var parts = benefit.Split(':', 2);
                                                        <li class="flex items-start gap-3">
                                                            <span class="flex-shrink-0 w-5 h-5 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center mt-0.5">
                                                                <svg class="w-3 h-3 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                                                                </svg>
                                                            </span>
                                                            <div class="flex-1">
                                                                <span class="font-semibold text-gray-900 dark:text-white">@parts[0]</span>
                                                                @if (parts.Length > 1)
                                                                {
                                                                    <span class="text-gray-600 dark:text-gray-300">: @parts[1]</span>
                                                                }
                                                            </div>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        }

                                        @* Use Cases Section *@
                                        @if (service.UseCases.Any())
                                        {
                                            <div class="mb-8">
                                                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                                                    <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                                                    </svg>
                                                    Common Use Cases
                                                </h3>
                                                <ul class="space-y-2">
                                                    @foreach (var useCase in service.UseCases.Take(4))
                                                    {
                                                        <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
                                                            <span class="text-primary-600 dark:text-primary-400 mt-1">â–¸</span>
                                                            <span>@useCase</span>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        }

                                        @* CTA Button *@
                                        <div class="pt-6">
                                            <button 
                                                @onclick="@(() => NavigateToContact(service.Title))"
                                                class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r @GetButtonGradient(index) text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                                                <span>Discuss This Service</span>
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                                                </svg>
                                            </button>
                                        </div>

                                        @* Detailed Content Toggle *@
                                        <div class="mt-6">
                                            <button 
                                                @onclick="@(() => ToggleDetails(service.Id))"
                                                class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium flex items-center gap-2 transition-colors">
                                                <span>@(_expandedServices.Contains(service.Id) ? "Hide" : "Show") detailed information</span>
                                                <svg class="w-4 h-4 transform transition-transform @(_expandedServices.Contains(service.Id) ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                                </svg>
                                            </button>
                                        </div>

                                        @* Detailed Content (Expandable) *@
                                        @if (_expandedServices.Contains(service.Id))
                                        {
                                            <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700 prose prose-lg dark:prose-invert max-w-none">
                                                @((MarkupString)service.ContentHtml)
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </article>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-20">
                    <p class="text-xl text-gray-600 dark:text-gray-400">No services available at this time.</p>
                </div>
            }
        </div>
    </section>

    @* Bottom CTA Section *@
    <section class="bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-600 py-16 md:py-24">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
                    Let's Build Something Together
                </h2>
                <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
                    Ready to transform your business with the right technical solutions? 
                    Let's discuss how we can help you achieve your goals.
                </p>
                <button 
                    @onclick="@(() => NavigateToContact())"
                    class="inline-flex items-center gap-3 px-8 py-4 bg-white text-primary-600 font-bold text-lg rounded-lg shadow-xl hover:shadow-2xl hover:scale-105 transform transition-all duration-200">
                    <span>Get In Touch</span>
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </button>
            </div>
        </div>
    </section>

</div>

@code {
    private List<Service> _services = new();
    private HashSet<string> _expandedServices = new();
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _services = await ContentService.GetServicesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading services: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void ToggleDetails(string serviceId)
    {
        if (_expandedServices.Contains(serviceId))
        {
            _expandedServices.Remove(serviceId);
        }
        else
        {
            _expandedServices.Add(serviceId);
        }
    }

    private void NavigateToContact(string? serviceName = null)
    {
        var url = "/contact";
        if (!string.IsNullOrEmpty(serviceName))
        {
            url += $"?service={Uri.EscapeDataString(serviceName)}";
        }
        Navigation.NavigateTo(url);
    }

    private string GetServiceInitials(string icon) => icon switch
    {
        "code-brackets" => "TC",
        "window-code" => "AD",
        "cpu-chip" => "AI",
        "cog" => "PE",
        _ => "SV"
    };

    private string GetGradientClasses(int index) => (index % 4) switch
    {
        0 => "from-primary-600 via-primary-700 to-primary-800",
        1 => "from-secondary-600 via-secondary-700 to-secondary-800",
        2 => "from-accent-600 via-accent-700 to-accent-800",
        3 => "from-primary-600 via-secondary-600 to-accent-700",
        _ => "from-primary-600 to-primary-800"
    };

    private string GetButtonGradient(int index) => (index % 4) switch
    {
        0 => "from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800",
        1 => "from-secondary-600 to-secondary-700 hover:from-secondary-700 hover:to-secondary-800",
        2 => "from-accent-600 to-accent-700 hover:from-accent-700 hover:to-accent-800",
        3 => "from-primary-600 to-secondary-600 hover:from-primary-700 hover:to-secondary-700",
        _ => "from-primary-600 to-primary-700"
    };
}
