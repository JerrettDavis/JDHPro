@page "/"
@using JdhPro.Web.Components.Sections

<PageTitle>JDH Productions | Technical Engineering Excellence</PageTitle>

<!-- Hero Section - Neo-Technical with Grid Overlay -->
<section class="relative min-h-screen flex items-center overflow-hidden bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950 tech-grid-dark scan-line">
    <!-- Coordinate Markers -->
    <span class="coord-marker top-8 left-8">00.00</span>
    <span class="coord-marker top-8 right-8">100.00</span>
    <span class="coord-marker bottom-8 left-8">00.100</span>
    <span class="coord-marker bottom-8 right-8">100.100</span>
    
    <!-- Animated geometric elements -->
    <div class="absolute inset-0 opacity-20">
        <div class="absolute top-1/4 left-1/4 w-64 h-64 border-2 border-tech-cyan animate-pulse" style="clip-path: polygon(0 0, 100% 0, 100% 80%, 80% 100%, 0 100%); animation-duration: 4s;"></div>
        <div class="absolute bottom-1/4 right-1/4 w-48 h-48 border-2 border-tech-lime rotate-12 animate-pulse" style="animation-duration: 3s; animation-delay: 1s;"></div>
    </div>
    
    <div class="container relative z-10 mx-auto px-6 lg:px-8">
        <div class="max-w-5xl">
            <!-- Technical Badge -->
            <div class="mb-8 reveal-up opacity-0">
                <span class="tech-badge">
                    <span class="inline-block w-2 h-2 bg-tech-lime mr-2 animate-pulse"></span>
                    SYSTEM.ONLINE
                </span>
            </div>
            
            <!-- Main Headline -->
            <h1 class="text-6xl md:text-8xl font-bold leading-none mb-8 reveal-up reveal-delay-1 opacity-0">
                <span class="text-white">Engineering</span><br/>
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#00F0FF] via-[#BFFF00] to-[#FF6B35]">
                    Tomorrow's
                </span><br/>
                <span class="text-white">Solutions</span>
            </h1>
            
            <!-- Subheading with Data Line -->
            <div class="data-line mb-12 reveal-up reveal-delay-2 opacity-0">
                <p class="text-xl md:text-2xl text-gray-300 font-light max-w-2xl">
                    Technical solutions built for complex problems.
                    <span class="text-tech-cyan font-mono">AI-powered</span>,
                    <span class="text-tech-lime font-mono">scalable</span>,
                    <span class="text-tech-orange font-mono">battle-tested</span>.
                </p>
            </div>
            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 reveal-up reveal-delay-3 opacity-0">
                <button 
                    data-testid="start-project-cta"
                    onclick="document.getElementById('contact').scrollIntoView({ behavior: 'smooth' })"
                    class="btn-tech">
                    Initialize Project
                </button>
                
                <button 
                    onclick="document.getElementById('services').scrollIntoView({ behavior: 'smooth' })"
                    class="px-8 py-4 font-mono font-bold text-sm uppercase tracking-wide border-2 border-tech-cyan text-tech-cyan hover:bg-tech-cyan hover:text-gray-950 transition-all duration-300 clip-corner-sm">
                    View Services
                </button>
            </div>
            
            <!-- Technical Stats -->
            <div class="mt-16 grid grid-cols-3 gap-8 max-w-2xl reveal-up reveal-delay-4 opacity-0">
                <div class="border-l-2 border-tech-cyan pl-4">
                    <div class="text-3xl font-bold font-mono text-tech-cyan">10+</div>
                    <div class="text-sm text-gray-400 font-mono uppercase tracking-wide">Years.Experience</div>
                </div>
                <div class="border-l-2 border-tech-lime pl-4">
                    <div class="text-3xl font-bold font-mono text-tech-lime">100%</div>
                    <div class="text-sm text-gray-400 font-mono uppercase tracking-wide">Client.Satisfaction</div>
                </div>
                <div class="border-l-2 border-tech-orange pl-4">
                    <div class="text-3xl font-bold font-mono text-tech-orange">24/7</div>
                    <div class="text-sm text-gray-400 font-mono uppercase tracking-wide">System.Support</div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-12 left-1/2 -translate-x-1/2">
        <div class="flex flex-col items-center gap-2 animate-bounce">
            <span class="text-xs font-mono text-tech-cyan uppercase tracking-wider">Scroll</span>
            <svg class="w-6 h-6 text-tech-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
            </svg>
        </div>
    </div>
</section>

<!-- Services Section - Modular Technical Cards -->
<section id="services" class="relative py-32 bg-gray-950 tech-grid">
    <div class="container mx-auto px-6 lg:px-8">
        <!-- Section Header -->
        <div class="mb-20">
            <div class="inline-flex items-center gap-3 mb-4">
                <span class="w-12 h-px bg-tech-cyan"></span>
                <span class="font-mono text-sm uppercase tracking-widest text-tech-cyan">Services.Array</span>
            </div>
            <h2 class="text-5xl md:text-6xl font-bold text-white mb-6">
                Technical<br/>Capabilities
            </h2>
            <p class="text-xl text-gray-400 max-w-2xl">
                Engineering solutions built to scale, perform, and adapt.
            </p>
        </div>
        
        <!-- Service Cards Grid -->
        <div class="grid md:grid-cols-2 gap-8">
            <div data-testid="service-card" class="tech-card p-10 group">
                <div class="mb-6">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-white mb-4 clip-corner">
                        <span class="text-2xl font-bold font-mono text-gray-900">TC</span>
                    </div>
                    <h3 class="text-3xl font-bold text-white mb-3 group-hover:text-tech-cyan transition-colors">
                        Technical Consulting
                    </h3>
                </div>
                <p class="text-gray-400 mb-6 leading-relaxed">
                    Expert guidance to optimize your technology stack and infrastructure. We help you make the right technical decisions that align with your business goals and get the most value from your investment.
                </p>
                <NavLink href="services" class="inline-flex items-center gap-2 font-mono text-sm uppercase tracking-wide text-tech-cyan hover:gap-4 transition-all">
                    Access.Module
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </NavLink>
            </div>
            
            <div data-testid="service-card" class="tech-card p-10 group">
                <div class="mb-6">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-white mb-4 clip-corner">
                        <span class="text-2xl font-bold font-mono text-gray-900">AD</span>
                    </div>
                    <h3 class="text-3xl font-bold text-white mb-3 group-hover:text-tech-lime transition-colors">
                        Application Development
                    </h3>
                </div>
                <p class="text-gray-400 mb-6 leading-relaxed">
                    Custom software solutions built from the ground up. From concept to deployment, we build applications that scale and are easy to maintain.
                </p>
                <NavLink href="services" class="inline-flex items-center gap-2 font-mono text-sm uppercase tracking-wide text-tech-lime hover:gap-4 transition-all">
                    Access.Module
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </NavLink>
            </div>
            
            <div data-testid="service-card" class="tech-card p-10 group">
                <div class="mb-6">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-white mb-4 clip-corner">
                        <span class="text-2xl font-bold font-mono text-gray-900">AI</span>
                    </div>
                    <h3 class="text-3xl font-bold text-white mb-3 group-hover:text-tech-orange transition-colors">
                        AI Workflow Design
                    </h3>
                </div>
                <p class="text-gray-400 mb-6 leading-relaxed">
                    Use AI to streamline operations and boost productivity. Modern AI tools integrated smoothly into your workflows.
                </p>
                <NavLink href="services" class="inline-flex items-center gap-2 font-mono text-sm uppercase tracking-wide text-tech-orange hover:gap-4 transition-all">
                    Access.Module
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </NavLink>
            </div>
            
            <div data-testid="service-card" class="tech-card p-10 group">
                <div class="mb-6">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-white mb-4 clip-corner">
                        <span class="text-2xl font-bold font-mono text-gray-900">PE</span>
                    </div>
                    <h3 class="text-3xl font-bold text-white mb-3 group-hover:text-tech-cyan transition-colors">
                        Process Engineering
                    </h3>
                </div>
                <p class="text-gray-400 mb-6 leading-relaxed">
                    We analyze and optimize your business processes. Find bottlenecks, eliminate waste, and implement solutions that work.
                </p>
                <NavLink href="services" class="inline-flex items-center gap-2 font-mono text-sm uppercase tracking-wide text-tech-cyan hover:gap-4 transition-all">
                    Access.Module
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </NavLink>
            </div>
        </div>
    </div>
</section>

<!-- Value Props - Technical Metrics -->
<section class="relative py-32 bg-gray-950 text-white scan-line overflow-hidden">
    <!-- Background Grid -->
    <div class="absolute inset-0 tech-grid-dark"></div>
    
    <div class="container relative z-10 mx-auto px-6 lg:px-8">
        <div class="text-center mb-20">
            <div class="inline-flex items-center gap-3 mb-4">
                <span class="w-12 h-px bg-tech-lime"></span>
                <span class="font-mono text-sm uppercase tracking-widest text-tech-lime">System.Advantages</span>
            </div>
            <h2 class="text-5xl md:text-6xl font-bold mb-6">
                Why Choose<br/>
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#00F0FF] to-[#BFFF00]">JDH Productions</span>
            </h2>
        </div>
        
        <div class="grid md:grid-cols-3 gap-12">
            <div class="text-center group">
                <div class="inline-flex items-center justify-center w-24 h-24 border-2 border-tech-cyan mb-8 clip-corner group-hover:scale-110 transition-transform">
                    <span class="text-4xl font-bold font-mono text-tech-cyan">EX</span>
                </div>
                <h3 class="text-2xl font-bold mb-4">Modern Expertise</h3>
                <p class="text-gray-400 leading-relaxed">
                    We use the latest technologies, frameworks, and industry best practices. We keep learning and evolving to deliver solutions that give you an edge.
                </p>
            </div>
            
            <div class="text-center group">
                <div class="inline-flex items-center justify-center w-24 h-24 border-2 border-tech-lime mb-8 clip-corner group-hover:scale-110 transition-transform">
                    <span class="text-4xl font-bold font-mono text-tech-lime">TS</span>
                </div>
                <h3 class="text-2xl font-bold mb-4">Custom Solutions</h3>
