@using JdhPro.Web.Models
@using Microsoft.AspNetCore.Components

<article class="space-y-8">
    
    @* Header Section *@
    <header class="space-y-6 pb-8 border-b border-tech-cyan/30">
        
        @* Title *@
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white font-mono leading-tight">
            @Post.Title
        </h1>

        @* Metadata Bar *@
        <div class="flex flex-wrap items-center gap-6 text-sm font-mono">
            
            @* Date *@
            <div class="flex items-center gap-2 text-tech-cyan">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <time datetime="@Post.Date.ToString("yyyy-MM-dd")">
                    @Post.Date.ToString("MMMM dd, yyyy")
                </time>
            </div>

            @* Read Time *@
            <div class="flex items-center gap-2 text-tech-lime">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>@ReadTimeMinutes min read</span>
            </div>

            @* Syndicated Badge *@
            @if (Post.Source == "syndicated")
            {
                <div class="flex items-center gap-2 text-tech-orange">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                    </svg>
                    <span>Syndicated</span>
                </div>
            }
        </div>

        @* Description *@
        @if (!string.IsNullOrEmpty(Post.Description))
        {
            <p class="text-xl text-gray-300 leading-relaxed">
                @Post.Description
            </p>
        }

        @* Categories and Tags *@
        <div class="flex flex-wrap gap-4">
            @if (Post.Categories.Any())
            {
                <div class="flex flex-wrap items-center gap-2">
                    <span class="text-xs text-gray-500 font-mono uppercase">Categories:</span>
                    @foreach (var category in Post.Categories)
                    {
                        <span class="inline-flex items-center text-xs font-mono text-white bg-tech-cyan/20 px-3 py-1 border border-tech-cyan/30 clip-corner-sm">
                            @category
                        </span>
                    }
                </div>
            }
            
            @if (Post.Tags.Any())
            {
                <div class="flex flex-wrap items-center gap-2">
                    <span class="text-xs text-gray-500 font-mono uppercase">Tags:</span>
                    @foreach (var tag in Post.Tags.Take(8))
                    {
                        <span class="inline-flex items-center text-xs font-mono text-tech-lime px-2 py-1 border border-tech-lime/30">
                            #@tag
                        </span>
                    }
                </div>
            }
        </div>
    </header>

    @* Syndicated Post Notice *@
    @if (Post.Source == "syndicated" && !string.IsNullOrEmpty(Post.CanonicalUrl))
    {
        <div class="tech-card bg-tech-orange/10 border-tech-orange/30 p-6">
            <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-tech-orange/20 border border-tech-orange/50 clip-corner-sm flex items-center justify-center">
                    <svg class="w-5 h-5 text-tech-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div class="flex-1 space-y-2">
                    <h4 class="font-bold text-white font-mono">ORIGINALLY.PUBLISHED</h4>
                    <p class="text-gray-300 text-sm leading-relaxed">
                        This article was originally published at
                        <a href="@Post.CanonicalUrl" target="_blank" rel="noopener noreferrer" class="text-tech-orange hover:text-tech-orange/80 underline font-mono">
                            jerrettdavis.com
                        </a>
                    </p>
                    <a href="@Post.CanonicalUrl" target="_blank" rel="noopener noreferrer"
                       class="inline-flex items-center gap-2 text-sm font-mono text-tech-orange hover:text-tech-orange/80 transition-colors">
                        <span>View original post</span>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    }

    @* Content *@
    <div class="prose prose-invert prose-lg max-w-none">
        <div class="blog-content">
            @((MarkupString)Post.ContentHtml)
        </div>
    </div>

    @* Footer Actions *@
    <footer class="pt-8 border-t border-tech-cyan/30">
        <NavLink href="blog" class="inline-flex items-center gap-2 text-tech-cyan hover:text-tech-lime transition-colors font-mono">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12"></path>
            </svg>
            <span>BACK.TO.BLOG</span>
        </NavLink>
    </footer>

</article>

<style>
    .blog-content {
        color: rgb(209, 213, 219);
        line-height: 1.625;
    }

    .blog-content h1,
    .blog-content h2,
    .blog-content h3,
    .blog-content h4,
    .blog-content h5,
    .blog-content h6 {
        color: white;
        font-weight: 700;
        font-family: 'JetBrains Mono', monospace;
        margin-top: 2rem;
        margin-bottom: 1rem;
    }

    .blog-content h2 {
        font-size: 1.875rem;
        border-left: 4px solid #00F0FF;
        padding-left: 1rem;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
    }

    .blog-content h3 {
        font-size: 1.5rem;
        color: #BFFF00;
    }

    .blog-content p {
        margin-bottom: 1rem;
    }

    .blog-content a {
        color: #00F0FF;
        text-decoration: underline;
        transition: color 0.2s;
    }

    .blog-content a:hover {
        color: #BFFF00;
    }

    .blog-content ul,
    .blog-content ol {
        margin-bottom: 1rem;
        margin-left: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .blog-content ul {
        list-style-type: none;
    }

    .blog-content ul li::before {
        content: 'â€º';
        color: #BFFF00;
        font-weight: 700;
        margin-right: 0.5rem;
    }

    .blog-content ol {
        list-style-type: decimal;
    }

    .blog-content li {
        color: rgb(209, 213, 219);
    }

    .blog-content code {
        background-color: rgb(31, 41, 55);
        color: #00F0FF;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        font-size: 0.875rem;
        font-family: 'JetBrains Mono', monospace;
        border: 1px solid rgb(55, 65, 81);
    }

    .blog-content pre {
        background-color: rgb(17, 24, 39);
        border: 1px solid rgba(0, 240, 255, 0.3);
        border-radius: 0.5rem;
        padding: 1rem;
        overflow-x: auto;
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .blog-content pre code {
        background-color: transparent;
        border: 0;
        padding: 0;
        font-size: 0.875rem;
    }

    .blog-content blockquote {
        border-left: 4px solid #FF6B35;
        padding-left: 1rem;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
        font-style: italic;
        color: rgb(156, 163, 175);
    }

    .blog-content strong {
        color: white;
        font-weight: 700;
    }

    .blog-content em {
        color: #BFFF00;
        font-style: italic;
    }

    .blog-content hr {
        border-color: rgba(0, 240, 255, 0.3);
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    .blog-content img {
        border-radius: 0.5rem;
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
        border: 2px solid rgba(0, 240, 255, 0.3);
    }

    .blog-content table {
        width: 100%;
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
        border-collapse: collapse;
    }

    .blog-content th {
        background-color: rgba(0, 240, 255, 0.2);
        color: white;
        font-family: 'JetBrains Mono', monospace;
        text-align: left;
        padding: 0.75rem;
        border: 1px solid rgba(0, 240, 255, 0.3);
    }

    .blog-content td {
        color: rgb(209, 213, 219);
        padding: 0.75rem;
        border: 1px solid rgb(55, 65, 81);
    }
</style>

@code {
    [Parameter, EditorRequired]
    public required BlogPost Post { get; set; }

    private int ReadTimeMinutes => Math.Max(1, Post.WordCount / 200);
}
