@page "/tailwind-demo"

<PageTitle>Tailwind CSS Demo</PageTitle>

<div class="container-custom py-12">
    <!-- Header Section -->
    <div class="mb-12 text-center">
        <h1 class="text-gradient mb-4">Tailwind CSS Setup</h1>
        <p class="text-xl text-neutral-600 max-w-2xl mx-auto">
            A modern, professional design system for JdhPro built with Tailwind CSS
        </p>
    </div>

    <!-- Color Palette -->
    <div class="card mb-8">
        <h2 class="mb-6">Color Palette</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
                <h3 class="text-lg mb-3">Primary</h3>
                <div class="space-y-2">
                    <div class="bg-primary-900 text-white p-4 rounded-lg">Deep Blue</div>
                    <div class="bg-primary-700 text-white p-4 rounded-lg">Primary 700</div>
                    <div class="bg-primary-500 text-white p-4 rounded-lg">Primary 500</div>
                </div>
            </div>
            <div>
                <h3 class="text-lg mb-3">Secondary</h3>
                <div class="space-y-2">
                    <div class="bg-secondary-500 text-white p-4 rounded-lg">Electric Blue</div>
                    <div class="bg-secondary-400 text-white p-4 rounded-lg">Secondary 400</div>
                    <div class="bg-secondary-300 text-neutral-900 p-4 rounded-lg">Secondary 300</div>
                </div>
            </div>
            <div>
                <h3 class="text-lg mb-3">Accent</h3>
                <div class="space-y-2">
                    <div class="bg-accent-600 text-white p-4 rounded-lg">Purple 600</div>
                    <div class="bg-accent-500 text-white p-4 rounded-lg">Vibrant Purple</div>
                    <div class="bg-accent-400 text-white p-4 rounded-lg">Accent 400</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Buttons -->
    <div class="card mb-8">
        <h2 class="mb-6">Button Styles</h2>
        <div class="flex flex-wrap gap-4">
            <button class="btn-primary">Primary Button</button>
            <button class="btn-secondary">Secondary Button</button>
            <button class="btn-accent">Accent Button</button>
            <button class="btn-outline">Outline Button</button>
        </div>
    </div>

    <!-- Typography -->
    <div class="card mb-8">
        <h2 class="mb-6">Typography</h2>
        <div class="space-y-4">
            <h1>Heading 1 - Large Display</h1>
            <h2>Heading 2 - Section Title</h2>
            <h3>Heading 3 - Subsection</h3>
            <h4>Heading 4 - Component Title</h4>
            <p class="text-base text-neutral-700">
                Body text using Inter font. This is a modern, professional sans-serif typeface
                designed for excellent readability at all sizes.
            </p>
            <p class="text-sm text-neutral-600">
                Small text for captions and secondary information.
            </p>
        </div>
    </div>

    <!-- Form Elements -->
    <div class="card mb-8">
        <h2 class="mb-6">Form Elements</h2>
        <div class="space-y-4 max-w-md">
            <div>
                <label class="block text-sm font-medium text-neutral-700 mb-2">
                    Email Address
                </label>
                <input type="email" class="input" placeholder="you@example.com" />
            </div>
            <div>
                <label class="block text-sm font-medium text-neutral-700 mb-2">
                    Password
                </label>
                <input type="password" class="input" placeholder="••••••••" />
            </div>
            <button class="btn-primary w-full">Sign In</button>
        </div>
    </div>

    <!-- Gradient Examples -->
    <div class="card mb-8">
        <h2 class="mb-6">Gradient Utilities</h2>
        <div class="space-y-4">
            <div class="bg-gradient-primary text-white p-6 rounded-xl">
                Primary Gradient Background
            </div>
            <div class="bg-gradient-secondary text-white p-6 rounded-xl">
                Secondary Gradient Background
            </div>
            <div class="bg-gradient-accent text-white p-6 rounded-xl">
                Accent Gradient Background
            </div>
        </div>
    </div>

    <!-- Cards Grid -->
    <div>
        <h2 class="mb-6">Card Grid Example</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="card">
                <div class="text-primary-900 mb-3">
                    <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 3.5a1.5 1.5 0 013 0V4a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-.5a1.5 1.5 0 000 3h.5a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-.5a1.5 1.5 0 00-3 0v.5a1 1 0 01-1 1H6a1 1 0 01-1-1v-3a1 1 0 00-1-1h-.5a1.5 1.5 0 010-3H4a1 1 0 001-1V6a1 1 0 011-1h3a1 1 0 001-1v-.5z"></path>
                    </svg>
                </div>
                <h3 class="text-xl mb-2">Feature One</h3>
                <p class="text-neutral-600">
                    Modern design with professional color palette and typography.
                </p>
            </div>
            <div class="card">
                <div class="text-secondary-500 mb-3">
                    <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M13 7H7v6h6V7z"></path>
                        <path fill-rule="evenodd" d="M7 2a1 1 0 012 0v1h2V2a1 1 0 112 0v1h2a2 2 0 012 2v2h1a1 1 0 110 2h-1v2h1a1 1 0 110 2h-1v2a2 2 0 01-2 2h-2v1a1 1 0 11-2 0v-1H9v1a1 1 0 11-2 0v-1H5a2 2 0 01-2-2v-2H2a1 1 0 110-2h1V9H2a1 1 0 010-2h1V5a2 2 0 012-2h2V2zM5 5h10v10H5V5z" clip-rule="evenodd"></path>
                    </svg>
                </div>
                <h3 class="text-xl mb-2">Feature Two</h3>
                <p class="text-neutral-600">
                    Responsive design that works on all devices and screen sizes.
                </p>
            </div>
            <div class="card">
                <div class="text-accent-500 mb-3">
                    <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
                    </svg>
                </div>
                <h3 class="text-xl mb-2">Feature Three</h3>
                <p class="text-neutral-600">
                    Fast build process integrated with your Blazor workflow.
                </p>
            </div>
        </div>
    </div>
</div>
