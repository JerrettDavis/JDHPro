@using JdhPro.Web.Models

<article class="tech-card bg-gray-900 border-@AccentColor/30 p-6 hover:border-@AccentColor/60 transition-all duration-300 group">
    <NavLink href="@($"blog/{Post.Id}")" class="block space-y-4">
        
        @* Header with date and source indicator *@
        <div class="flex items-center justify-between gap-3">
            <time datetime="@Post.Date.ToString("yyyy-MM-dd")" class="text-sm font-mono text-tech-cyan">
                @Post.Date.ToString("yyyy.MM.dd")
            </time>
            
            @if (Post.Source == "syndicated")
            {
                <span class="inline-flex items-center gap-1 text-xs font-mono text-tech-orange bg-tech-orange/10 px-2 py-1 clip-corner-sm border border-tech-orange/30">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                    </svg>
                    SYNDICATED
                </span>
            }
        </div>

        @* Title *@
        <h3 class="text-xl md:text-2xl font-bold text-white font-mono group-hover:text-@AccentColor transition-colors">
            @Post.Title
        </h3>

        @* Description *@
        @if (!string.IsNullOrEmpty(Post.Description))
        {
            <p class="text-gray-400 leading-relaxed line-clamp-3">
                @Post.Description
            </p>
        }

        @* Tags *@
        @if (Post.Tags.Any())
        {
            <div class="flex flex-wrap gap-2 pt-2">
                @foreach (var tag in Post.Tags.Take(5))
                {
                    <span class="inline-flex items-center text-xs font-mono text-tech-lime bg-tech-lime/10 px-2 py-1 border border-tech-lime/30">
                        #@tag
                    </span>
                }
                @if (Post.Tags.Count > 5)
                {
                    <span class="text-xs text-gray-500 font-mono">
                        +@(Post.Tags.Count - 5) more
                    </span>
                }
            </div>
        }

        @* Read More Indicator *@
        <div class="flex items-center gap-2 text-@AccentColor font-mono text-sm pt-2">
            <span class="group-hover:translate-x-1 transition-transform">READ.MORE</span>
            <svg class="w-4 h-4 transform group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
        </div>
    </NavLink>
</article>

@code {
    [Parameter, EditorRequired]
    public required BlogPost Post { get; set; }

    [Parameter]
    public string AccentColor { get; set; } = "tech-cyan";
}
