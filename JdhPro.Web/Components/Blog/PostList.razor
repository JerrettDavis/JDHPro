@using JdhPro.Web.Models

@if (Posts.Any())
{
    <div class="grid gap-8 @(GridCols switch 
    {
        1 => "grid-cols-1",
        2 => "grid-cols-1 md:grid-cols-2",
        _ => "grid-cols-1 md:grid-cols-2 lg:grid-cols-3"
    })">
        @foreach (var (post, index) in Posts.Select((p, i) => (p, i)))
        {
            var accentColor = GetAccentColor(index);
            <PostCard Post="@post" AccentColor="@accentColor" />
        }
    </div>
}
else
{
    <div class="text-center py-20">
        <div class="inline-block mb-6">
            <div class="w-20 h-20 border-2 border-tech-cyan/30 clip-corner flex items-center justify-center">
                <svg class="w-10 h-10 text-tech-cyan/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
            </div>
        </div>
        <h3 class="text-2xl font-bold text-white font-mono mb-2">NO.POSTS.FOUND</h3>
        <p class="text-gray-400">Check back soon for new content</p>
    </div>
}

@code {
    [Parameter, EditorRequired]
    public required List<BlogPost> Posts { get; set; }

    [Parameter]
    public int GridCols { get; set; } = 2;

    private string GetAccentColor(int index)
    {
        return (index % 3) switch
        {
            0 => "tech-cyan",
            1 => "tech-lime",
            _ => "tech-orange"
        };
    }
}
