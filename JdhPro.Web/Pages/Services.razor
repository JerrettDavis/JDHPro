@page "/services"
@using JdhPro.Web.Models
@using JdhPro.Web.Services
@inject ContentService ContentService
@inject NavigationManager Navigation

<PageTitle>Our Services - JDH Productions</PageTitle>

<div class="min-h-screen bg-gray-950 tech-grid-dark">
    
    @* Hero Section *@
    <section class="relative py-20 overflow-hidden border-b border-tech-cyan/30">
        <div class="scan-line"></div>
        
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="max-w-4xl mx-auto text-center space-y-6">
                <div class="inline-block">
                    <span class="text-tech-lime font-mono text-sm uppercase tracking-wider">/// Services.Directory</span>
                </div>
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white tracking-tight font-mono">
                    OUR.SERVICES
                </h1>
                <p class="text-xl md:text-2xl text-gray-400 leading-relaxed max-w-3xl mx-auto">
                    Technical solutions built for what you actually need
                </p>
                <div class="flex items-center justify-center gap-4 pt-4">
                    <div class="w-2 h-2 rounded-full bg-tech-cyan hex-pulse"></div>
                    <span class="text-tech-cyan font-mono text-sm">READY.TO.DEPLOY</span>
                </div>
            </div>
        </div>
    </section>

    @* Services Loading/Content *@
    <section class="py-16 md:py-24">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            @if (_isLoading)
            {
                <div class="flex justify-center items-center py-20">
                    <div class="w-16 h-16 border-4 border-tech-cyan/20 border-t-tech-cyan clip-corner animate-spin"></div>
                </div>
            }
            else if (_services.Any())
            {
                @* Service Cards *@
                <div class="space-y-16">
                    @foreach (var (service, index) in _services.Select((s, i) => (s, i)))
                    {
                        var accentColor = GetAccentColor(index);
                        
                        <article data-testid="service-section" id="@service.Id" class="scroll-mt-24">
                            <div class="tech-card bg-gray-900 border-@accentColor/30 p-8 md:p-12">
                                <div class="grid md:grid-cols-2 gap-12">
                                    
                                    @* Icon/Header Side *@
                                    <div class="space-y-6">
                                        <div class="inline-flex items-center justify-center w-24 h-24 clip-corner border-2 border-@accentColor bg-@accentColor/10">
                                            <span class="text-4xl font-bold text-@accentColor font-mono">@GetServiceInitials(service.Icon)</span>
                                        </div>
                                        <div class="space-y-4">
                                            <h2 class="text-3xl md:text-4xl font-bold text-white font-mono break-words">
                                                @service.Title.Replace(" ", ".")
                                            </h2>
                                            <p class="text-lg text-gray-400">
                                                @service.Summary
                                            </p>
                                        </div>
                                        
                                        @* CTA Button *@
                                        <div class="pt-4">
                                            <button 
                                                @onclick="@(() => NavigateToContact(service.Title))"
                                                class="inline-flex items-center gap-2 px-6 py-3 bg-@accentColor/10 border border-@accentColor/30 hover:bg-@accentColor hover:text-gray-950 text-@accentColor font-mono font-bold text-sm uppercase tracking-wide clip-corner-sm transition-all duration-200 group">
                                                <span>Discuss.Service</span>
                                                <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                                                </svg>
                                            </button>
                                        </div>
                                    </div>

                                    @* Content Side *@
                                    <div class="space-y-8">
                                        
                                        @* Benefits Section *@
                                        @if (service.Benefits.Any())
                                        {
                                            <div>
                                                <h3 class="text-lg font-bold text-white mb-4 font-mono flex items-center gap-2">
                                                    <span class="text-tech-lime">›</span>
                                                    Key.Benefits
                                                </h3>
                                                <ul class="space-y-3">
                                                    @foreach (var benefit in service.Benefits.Take(4))
                                                    {
                                                        var parts = benefit.Split(':', 2);
                                                        <li class="flex items-start gap-3">
                                                            <span class="flex-shrink-0 w-5 h-5 clip-corner bg-tech-lime/20 flex items-center justify-center mt-0.5 border border-tech-lime/50">
                                                                <span class="text-tech-lime text-xs">✓</span>
                                                            </span>
                                                            <div class="flex-1 font-mono text-sm">
                                                                <span class="text-white">@parts[0]</span>
                                                                @if (parts.Length > 1)
                                                                {
                                                                    <span class="text-gray-400">: @parts[1]</span>
                                                                }
                                                            </div>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        }

                                        @* Use Cases Section *@
                                        @if (service.UseCases.Any())
                                        {
                                            <div>
                                                <h3 class="text-lg font-bold text-white mb-4 font-mono flex items-center gap-2">
                                                    <span class="text-@accentColor">›</span>
                                                    Use.Cases
                                                </h3>
                                                <ul class="space-y-2">
                                                    @foreach (var useCase in service.UseCases.Take(4))
                                                    {
                                                        <li class="flex items-start gap-3 text-gray-400 font-mono text-sm">
                                                            <span class="text-@accentColor mt-1">▸</span>
                                                            <span>@useCase</span>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        }

                                        @* Detailed Content Toggle *@
                                        <div>
                                            <button 
                                                @onclick="@(() => ToggleDetails(service.Id))"
                                                class="text-@accentColor hover:text-white font-mono text-sm flex items-center gap-2 transition-colors">
                                                <span>@(_expandedServices.Contains(service.Id) ? "[−]" : "[+]") @(_expandedServices.Contains(service.Id) ? "Hide" : "Show").Details</span>
                                            </button>
                                        </div>

                                        @* Detailed Content (Expandable) *@
                                        @if (_expandedServices.Contains(service.Id))
                                        {
                                            <div class="pt-6 border-t border-tech-cyan/20 prose prose-invert max-w-none text-gray-300 font-mono text-sm">
                                                @((MarkupString)service.ContentHtml)
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </article>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-20">
                    <p class="text-xl text-gray-400 font-mono">No.Services.Available</p>
                </div>
            }
        </div>
    </section>

    @* Bottom CTA Section *@
    <section class="relative py-24 border-t border-tech-cyan/30 overflow-hidden">
        <div class="scan-line"></div>
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="max-w-4xl mx-auto text-center space-y-8">
                <h2 class="text-3xl md:text-5xl font-bold text-white font-mono">
                    LET'S.BUILD<br/>
                    <span class="text-tech-cyan">SOMETHING.TOGETHER</span>
                </h2>
                <p class="text-xl text-gray-400 max-w-2xl mx-auto">
                    Have a project in mind? Let's talk about how we can help.
                </p>
                <button 
                    @onclick="@(() => NavigateToContact())"
                    class="btn-tech">
                    <span>GET.IN.TOUCH</span>
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </button>
            </div>
        </div>
    </section>

</div>

@code {
    private List<Service> _services = new();
    private HashSet<string> _expandedServices = new();
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _services = await ContentService.GetServicesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading services: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void ToggleDetails(string serviceId)
    {
        if (_expandedServices.Contains(serviceId))
        {
            _expandedServices.Remove(serviceId);
        }
        else
        {
            _expandedServices.Add(serviceId);
        }
    }

    private void NavigateToContact(string? serviceName = null)
    {
        var url = "/contact";
        if (!string.IsNullOrEmpty(serviceName))
        {
            url += $"?service={Uri.EscapeDataString(serviceName)}";
        }
        Navigation.NavigateTo(url);
    }

    private string GetServiceInitials(string icon) => icon switch
    {
        "code-brackets" => "TC",
        "window-code" => "AD",
        "cpu-chip" => "AI",
        "cog" => "PE",
        _ => "SV"
    };

    private string GetAccentColor(int index) => (index % 3) switch
    {
        0 => "tech-cyan",
        1 => "tech-lime",
        2 => "tech-orange",
        _ => "tech-cyan"
    };
}
